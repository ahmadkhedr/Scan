<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light3"
    tools:context="kedr.emam.ahmad.scan.Inventory">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="368dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/layoutbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/text"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/textviewbackground"
            android:drawableLeft="@drawable/barcode"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:hint="@string/barcode_info"
            android:inputType="number"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/text"
            android:layout_alignStart="@+id/text"
            android:layout_below="@+id/text"
            android:layout_marginTop="23dp"
            android:background="@drawable/textviewbackground"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/horizontal"
            android:fontFamily="casual"
            android:gravity="center"
            android:hint="@string/product_n1ame"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/num"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="23dp"
            android:background="@drawable/textviewbackground"
            android:drawableLeft="@drawable/quality"
            android:fontFamily="casual"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:hint="@string/enert_you_quantity"
            android:inputType="number"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/num"
            android:layout_alignRight="@+id/num"
            android:layout_below="@+id/num"
            android:layout_marginTop="23dp"
            android:background="@drawable/button_background2"
            android:gravity="center"
            android:onClick="save"
            android:text="@string/save" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_alignLeft="@+id/num"
            android:layout_alignStart="@+id/num"
            android:layout_alignTop="@+id/btnSave"
            android:background="@drawable/button_background2"
            android:gravity="center"
            android:onClick="Cancel"
            android:text="@string/cancel" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
